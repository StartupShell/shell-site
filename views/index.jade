extends layout
block content

  .video-container
    .overlay
    <video autoplay loop poster="/images/timelapse.jpg" id="bgvid"><source src="/images/timelapse.webm" type="video/webm"><source src="/images/timelapse.mp4" type="video/mp4"><source src="/images/timelapse.ogv" type="video/ogv"></video>
  .feature
    .container
      .row
        .col-sm-12.text-center
          h1 Think. Build. Play.
          p.
            Startup Shell is a student-run nonprofit incubator 
            that fosters entrepreneurship through collaboration 
            at the University of Maryland. These 
            people are building something great.

  .content
    .container
      .row#about
        .about
          .col-sm-12.section
            include includes/about
      .row#ventures
        .ventures
          .col-sm-12.section
            include includes/ventures

      .row#connect
        .connect
          .col-sm-12.section
            .row
              .col-sm-6
                .events
                  h2 Events
                .give-a-talk
                  a(href="/talk" target="_blank")
                    button.talk
                        p Give a Shell Talk
              .col-sm-6
                .news
                  include includes/news

      .row#membership
        .membership
          .col-sm-12.section
            include includes/membership

      .row
        .col-sm-12
          a(href="/apply")
            button.apply Big Ol' Apply Button
      .row
        .partners
          .col-sm-12.section.text-center
            include includes/sponsors
